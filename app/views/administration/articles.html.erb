<div class="container">
  <h1 class="text-center">Adminstrateur</h1>
  <%= render 'administration/utils/nav_links' %>
  <table class="table table-dark table-striped">
    <thead>
      <tr>
        <th scope="col">Id</th>
        <th scope="col">Titre</th>
        <th scope="col">Auteur</th>
        <th scope="col">Commentaires</th>
      </tr>
    </thead>
    <tbody>
      <% @articles.each do |article| %>
        <tr>
          <th scope="row"><%= article.id %></th>
          <td><%= link_to article.titre.truncate(15), administration_articles_path(article) %></td>
          <td><%= article.user.username %></td>
          <td><%= pluralize(article.commentaires.count, "Commentaire") %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>