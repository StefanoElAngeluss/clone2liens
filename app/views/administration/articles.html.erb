<h1 class="text-center">Adminstrateur</h1>
<%= render 'administration/utils/nav_links' %>
<%#= line_chart Article.group(:updated_at).group_by_week(:created_at).count %>
<%#= pie_chart Article.group(:created_at).count %>
<%= line_chart Article.group_by_day(:created_at).count %>
<table class="table table-dark table-striped">
    <thead>
        <tr>
        <th scope="col">Id</th>
        <th scope="col">Titre</th>
        <th scope="col">Auteur</th>
        <th scope="col">Commentaires</th>
        </tr>
    </thead>
    <tbody>
        <% @articles.each do |article| %>
        <tr>
            <th scope="row"><%= article.id %></th>
            <td><%= link_to article.titre.truncate(15), administration_articles_path(article) %></td>
            <td><%= article.user.username %></td>
            <td><%= pluralize(article.commentaires.count, "Commentaire") %></td>
        </tr>
        <% end %>
    </tbody>
</table>