<div class="container">

  <p style="color: green"><%= notice %></p>
  <% if current_user&.administrateur? %>
    <div class="btn-group">
      <%= link_to "Edit this category", edit_category_path(@category), class: "btn btn-warning" %> |
      <%= button_to "Destroy this category", @category, method: :delete, class: "btn btn-danger" %>
    </div>
  <% end %>
  <%= render @category %>
  <div>
    <%= link_to "Back to categories", categories_path, class: "btn btn-secondary" %>
  </div>

</div>
