<div id="<%= dom_id @liste %>">
    <div class="card p-3 mt-2 mb-3" style="max-width: 100%;">
        <h3 class="card-title">
            <%= @liste.titre %>
        </h3>

        <p class="card-text p-3">
            <ul>
                <li>
                    <% if @liste.contenu.present? %>
                        <%= @liste.contenu %>
                    <% else %>
                        <em>Aucun contenu</em>
                    <% end %>
                </li>
            </ul>
        </p>
        <div class="d-flex justify-content-between">
            <div>
                <%= link_to "Editer cette tâche", edit_liste_path(@liste), class: "btn btn-sm btn-warning" %>&nbsp;-&nbsp;
                <%= link_to "Retour aux tâches", listes_path, class: "btn btn-sm btn-secondary" %>
            </div>
            <%= link_to "Destroy this liste", @liste, "data-turbo-method": :delete, "data-turbo-confirm": "Êtes vous sûre ?", class: "btn btn-sm btn-danger" %>
        </div>

    </div>
</div>

