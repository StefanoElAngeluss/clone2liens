    <%# LIVERELOAD %>
    <script>document.write('<script src="http://'
    + (location.host || 'localhost').split(':')[0]
    + ':35729/livereload.js?snipver=1"></'
    + 'script>')</script>
  </head>

  <body>

  <header>
    <%= render 'parts/navbar' %>
  </header>

  <main>
    <p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>
    <%= yield %>
  </main>

  </body>
</html>
