{
  "env": {
    "commonjs": false,
    "es6": false,
    "browser": true,
    "es2021": true,
    "node": true
  },
  "extends": ["airbnb-base", "prettier"],
  "plugins": ["prettier"],
  "globals": {
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly"
  },
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "rules": {
    "no-console": 0,
    "class-methods-use-this": 0,
    "semicolon": true,
    "indent": [
      "error",
      2 // 2 spaces
    ],
    "linebreak-style": ["error", "windows"],
    "quotes": ["error", "single"],
    "prettier/prettier": [
      "error",
      {
        "insertSpaces": true,
        "singleQuote": true,
        "parser": "flow",
        "linebreak": "windows"
      }
    ]
  }
}
